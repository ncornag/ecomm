{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": false,
    "importHelpers": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["ESNext", "dom"],
    "paths": {
      "@ecomm/AppError": ["libs/AppError/src/index.ts"],
      "@ecomm/Config": ["libs/Config/src/index.ts"],
      "@ecomm/Docs": ["libs/Docs/src/index.ts"],
      "@ecomm/Mongo": ["libs/Mongo/src/index.ts"],
      "@ecomm/MongoErrors": ["libs/MongoErrors/src/index.ts"],
      "@ecomm/Queues": ["libs/Queues/src/index.ts"],
      "@ecomm/RequestContext": ["libs/RequestContext/src/index.ts"],
      "@ecomm/Search": ["libs/Search/src/index.ts"],
      "@ecomm/Server": ["libs/Server/src/index.ts"],
      "@ecomm/AuditLog": ["libs/AuditLog/src/index.ts"],
      "@ecomm/Expressions": ["libs/Expressions/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"],
  "include": ["src/**/*.ts"]
}
