# Build the docker image with `npx nx docker-build promotion`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t catalog`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system promotion && \
          adduser --system -G promotion promotion

COPY dist/apps/promotion promotion/
RUN chown -R promotion:promotion .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix promotion --omit=dev -f install

CMD [ "node", "promotion" ]
